#                echo "#99CC99"
#                echo "#99CC99"
#        NCHAR=(${#TITLE} + ${#ARTIST} + ${#ALBUM})
#        if [[ $NCHAR -gt 30 ]]; then
#                TRACK=`echo "- "$TITLE " - " $ARTIST`
#                echo "$TRACK" | sed -e 's/?/\?/g'
